doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    script(src='/javascripts/bootstrap.min.js')
  body
  .container
    .card.card-container
      img#profile-img.profile-img-card(src='/images/profile.png')
      p#profile-name.profile-name-card
      form.form-signin(action='/login/verify', method="POST")
        span#reauth-email.reauth-email
        input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name='username')
        br
        input#inputPassword.form-control(type='password', placeholder='Password', required='', name='password')
        br
        button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') Sign in
